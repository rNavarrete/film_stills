<%= simple_form_for(@movie, url: movies_path) do |f| %>
  <%= f.text_field :title, :id => "title", placeholder: "Title" %> 
  <%= f.text_field :director, :id => "director", placeholder: "Director" %> 
  <%= f.label :poster_image, "Attach an Image" %>
  <%= f.text_field :release_date, :id => "Release date", placeholder: "When was this film released?" %>
  <%= f.file_field :poster_image, id: "Poster image" %>
  <%= f.submit "Save Movie", class: "btn btn-success" %>
<% end %>

